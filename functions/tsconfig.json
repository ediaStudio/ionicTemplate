{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": "./",
    "paths": {
      "@models/*": [
        "./src/models/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
